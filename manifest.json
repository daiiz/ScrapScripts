{
    "background": {
        "page": "background.html"
    },
    "options_page": "options.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "description": "ScrapScripts",
    "icons": {
        "128": "icon.png",
        "48" : "icon.png",
        "16" : "icon.png"
    },
    "manifest_version": 2,
    "name": "ScrapScripts",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": [
            ],
            "js": [
                "libs/jquery.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": ["*://scrapbox.io/*"],
            "css": [
              "scripts/scrapbox-io/main.css"
            ],
            "js": [
                "scripts/scrapbox-io/main.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": ["*://calendar.google.com/calendar/render"],
            "css": [
                "scripts/google-calendar/main.css"
            ],
            "js": [
                "scripts/google-calendar/main.js"
            ],
            "run_at": "document_idle"
        }
    ],

    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab",
        "<all_urls>"
    ],

    "version": "0.1.1"
}
